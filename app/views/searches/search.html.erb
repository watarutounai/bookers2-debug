<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <tr>
        <th>name</th>
        <th>introduction</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
      <tr>
        <td><%#= link_to 'Show', user_path(user.id) %></td>
      </tr>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <tr>
        <th>image</th>
        <th>title</th>
        <th>opinion</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td>
            <!--画像をリンクに紐づけるときは、do,endで囲う-->
            <%= link_to(book.user) do %>
             <%= image_tag book.user.get_profile_image(50,50) %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>